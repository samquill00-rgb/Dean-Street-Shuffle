:: StoryStylesheet [stylesheet]
/* Gritty 1970s Soho Aesthetic - Enhanced */

tw-story {
  background-color: #1a1a1a;
  color: #d4a574;
  font-family: 'Courier New', Courier, monospace;
  font-size: 18px;
  line-height: 1.6;
  padding: 40px;
  position: relative;
}

/* Film grain overlay */
tw-story::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulance type='fractalNoise' baseFrequency='2.5' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  opacity: 0.15;
  pointer-events: none;
  z-index: 1;
}

tw-passage {
  max-width: 700px;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  animation: fadeIn 0.8s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Pulsing glow animation */
@keyframes pulse {
  0%, 100% {
    text-shadow: 0 0 6px rgba(244, 199, 122, 0.4);
  }
  50% {
    text-shadow: 0 0 12px rgba(244, 199, 122, 0.7);
  }
}

/* Links - with pulsing glow */
tw-link {
  color: #f4c77a;
  text-decoration: none;
  border-bottom: 1px solid #d4a574;
  transition: color 0.3s ease, border-color 0.3s ease;
  animation: pulse 3s ease-in-out infinite;
}

tw-link:hover {
  color: #fff4e6;
  border-bottom-color: #f4c77a;
  animation: none;
  text-shadow: 0 0 15px rgba(244, 199, 122, 0.8);
}

/* Headers and emphasis */
h1, h2, h3 {
  color: #f4c77a;
  text-transform: uppercase;
  letter-spacing: 2px;
  font-weight: normal;
}

em, i {
  color: #bbb;
  font-style: italic;
}

/* Hide browser back button functionality */
html {
  overscroll-behavior: none;
}

/* Reduce big default gaps between blocks (Harlowe uses lots of <p>) */
tw-story p {
  margin: 0.25em 0;
}

/* === ALBA REVELATION BOX === */
/* This appears when Red first gives you the quest */

.revelation-box {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #1a1a2e 100%);
  border: 2px solid #e6d5ac;
  border-radius: 8px;
  padding: 25px;
  margin: 30px 0;
  position: relative;
  box-shadow:
    0 0 20px rgba(230, 213, 172, 0.3),
    inset 0 0 30px rgba(0, 0, 0, 0.5);
}

.revelation-box::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, #e6d5ac, #8b7355, #e6d5ac, #8b7355);
  border-radius: 10px;
  z-index: -1;
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

.revelation-header {
  text-align: center;
  font-size: 1.4em;
  color: #e6d5ac;
  letter-spacing: 8px;
  margin-bottom: 20px;
  text-shadow: 0 0 10px rgba(230, 213, 172, 0.5);
}

.revelation-footer {
  text-align: center;
  font-size: 0.9em;
  color: #8b7355;
  letter-spacing: 4px;
  margin-top: 20px;
  padding-top: 15px;
  border-top: 1px solid #8b7355;
}

.alba-line {
  font-style: italic;
  color: #f4e4bc;
  text-align: center;
  font-size: 1.2em;
  padding: 15px;
  margin: 15px 0;
  background: rgba(0, 0, 0, 0.3);
  border-left: 3px solid #e6d5ac;
}


/* === ALBA TRACKER BOX === */
/* This appears on every page after the revelation */

.alba-tracker {
  background: rgba(26, 26, 46, 0.9);
  border: 1px solid #8b7355;
  border-radius: 6px;
  padding: 15px;
  margin-bottom: 25px;
  font-size: 0.85em;
}

.alba-tracker-header {
  color: #e6d5ac;
  letter-spacing: 4px;
  text-align: center;
  font-size: 1.1em;
  margin-bottom: 5px;
}

.alba-tracker-subtitle {
  color: #8b7355;
  font-size: 0.85em;
  text-align: center;
  margin-bottom: 12px;
  font-style: italic;
}

.alba-line-found {
  color: #a8d5a2;
  padding: 4px 0;
  font-style: italic;
}

.alba-line-missing {
  color: #666;
  padding: 4px 0;
  letter-spacing: 2px;
}

.alba-progress {
  color: #8b7355;
  text-align: center;
  margin-top: 10px;
  font-size: 0.9em;
}

.alba-complete {
  color: #f4e4bc;
  text-align: center;
  margin-top: 10px;
  padding: 8px;
  background: rgba(230, 213, 172, 0.1);
  border: 1px solid #e6d5ac;
  animation: pulse 2s ease-in-out infinite;
}